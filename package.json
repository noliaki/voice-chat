{
  "name": "template-single-page",
  "version": "1.0.0",
  "description": "template for single web page",
  "main": "index.js",
  "repository": {
    "url": "git@github.com:noliaki/template-single-page.git",
    "type": "git"
  },
  "author": "noliaki <noliaki.mobile@gmail.com>",
  "license": "MIT",
  "scripts": {
    "build:dev": "run-s clean mkdir imagemin start:dev",
    "build:production": "run-s clean mkdir start:production imagemin",
    "clean": "rm -fr ./dist",
    "mkdir": "mkdir -p dist/css",
    "start:production": "run-s production:*",
    "production:stylus": "stylus -u autoprefixer-stylus ./src/css/style.styl -o ./dist/css --compress",
    "production:pug": "pug ./src/index.pug --basedir ./src/ --out ./dist/ --obj ./page-data.js",
    "production:webpack": "webpack --config ./webpack.config.js",
    "start:dev": "run-p dev:* watch:imagemin ",
    "dev:server": "browser-sync start --server ./dist --files ./dist",
    "dev:stylus": "stylus -u autoprefixer-stylus -w ./src/css/style.styl -o ./dist/css --compress",
    "dev:pug": "pug --pretty --basedir ./src/ --out ./dist/ --watch ./src/ --obj ./page-data.js",
    "dev:webpack": "webpack --config ./webpack.config.dev.js",
    "watch:imagemin": "node ./watch.js",
    "imagemin": "node ./imagemin.js"
  },
  "dependencies": {
    "autoprefixer-stylus": "^0.14.0",
    "babel-core": "^6.25.0",
    "babel-loader": "^7.1.1",
    "babel-preset-es2015": "^6.24.1",
    "browser-sync": "^2.18.12",
    "imagemin": "^5.3.1",
    "imagemin-mozjpeg": "^6.0.0",
    "imagemin-pngquant": "^5.0.1",
    "npm-run-all": "^4.0.2",
    "pug-cli": "^1.0.0-alpha6",
    "stylus": "^0.54.5",
    "webpack": "^3.3.0"
  },
  "devDependencies": {
    "eslint": "^4.2.0",
    "eslint-config-standard": "^10.2.1",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-node": "^5.1.0",
    "eslint-plugin-promise": "^3.5.0",
    "eslint-plugin-standard": "^3.0.1"
  }
}
