{
  "name": "template-single-page",
  "version": "1.0.0",
  "description": "template for single web page",
  "main": "index.js",
  "repository": {
    "url": "git@github.com:noliaki/template-single-page.git",
    "type": "git"
  },
  "author": "noliaki <noliaki.mobile@gmail.com>",
  "license": "MIT",
  "scripts": {
    "build:dev": "cross-env NODE_ENV=development DIST_DIR=./dist-dev run-s clean start:build:dev",
    "build:production": "cross-env NODE_ENV=production DIST_DIR=./dist run-s clean start:build:production",
    "clean": "rm -fr $DIST_DIR",
    "start:build:production": "npm run webpack && node ./scripts/production.js",
    "start:build:dev": "npm run webpack & node ./scripts/dev.js",
    "webpack": "webpack --config ./webpack.config.js"
  },
  "dependencies": {
    "autoprefixer-stylus": "^0.14.0",
    "babel-polyfill": "^6.26.0",
    "browser-sync": "^2.18.13",
    "cross-env": "^5.0.1",
    "eslint": "^4.7.0",
    "fs-extra": "^4.0.2",
    "glob": "^7.1.2",
    "htmlhint": "^0.9.13",
    "imagemin": "^5.3.1",
    "imagemin-jpegtran": "^5.0.2",
    "imagemin-pngquant": "^5.0.1",
    "imagemin-svgo": "^5.2.2",
    "js-yaml": "^3.10.0",
    "npm-run-all": "^4.0.2",
    "pug": "^2.0.0-rc.4",
    "stylus": "^0.54.5",
    "ts-loader": "^3.0.5",
    "tslint": "^5.7.0",
    "tslint-config-standard": "^7.0.0",
    "typescript": "^2.5.2",
    "webpack": "^3.4.1"
  },
  "devDependencies": {
    "eslint-config-standard": "^10.2.1",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-node": "^5.1.1",
    "eslint-plugin-promise": "^3.5.0",
    "eslint-plugin-standard": "^3.0.1"
  }
}
